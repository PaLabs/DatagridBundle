{% block string_filter_form_widget %}
    <table width="100%">
        <tr>
            <td width="150px">{{ form_widget(form.o) }}</td>
            <td style="padding-left: 10px">{{ form_widget(form.v) }}</td>
        </tr>
    </table>
{% endblock %}

{% block date_filter_form_widget %}
    <table width="100%">
        <tr>
            <td>{{ form_widget(form.s) }}</td>
            <td width="50px" align="center">...</td>
            <td>{{ form_widget(form.e) }}</td>
        </tr>
    </table>
{% endblock %}

{% block entity_filter_form_widget %}
